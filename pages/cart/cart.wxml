<view class='container'>
	<view class="goodsList" wx:if="{{cartGoods.length > 0}}">
		<view class="a-goods {{item.isTouchMove ? 'touch-move-active' : ''}}" wx:for="{{cartGoods}}" wx:key="id" bindtouchstart="touchstart" bindtouchmove="touchmove" data-index="{{index}}">
			<view class='content'>
				<!-- <view wx:if="{{item.quantity >0 && item.is_on_sale == 1}}" class="checkbox" bindtap="checkedItem" data-item-id="{{item.id}}"> -->
				<view wx:if="{{item.quantity >0}}" class="checkbox" bindtap="checkedItem" data-item-id="{{item.id}}">
					<image wx:if="{{item.checked == 1}}" class="checkbox-img" src="/images/icon/gou-red.png"></image>
					<image wx:else class="checkbox-img" src="/images/icon/gou-gray.png"></image>
				</view>
				<image src="/images/icon/gou-gray.png" wx:else class="checkbox"></image>
				<view class="goods-info">
					<view class="goods-url">
						<view class="img-box" bindtap="goGoodsDetail" data-product-id="{{item.productId}}">
							<image src="{{item.productPic}}" class="img" />
						</view>
						<view class="text-box">
							<!-- <view class="{{item.quantity >0 && item.is_on_sale == 1?'goods-title':'out-stock-title'}}">{{item.productName}}</view> -->
							<view class="{{item.quantity >0?'goods-title':'out-stock-title'}}">{{item.productName}}</view>
							<view class="goods-label">{{item.productAttr}}</view>
							<view class="goods-price">
								<view class='price-now'>￥{{item.price}}</view>
							</view>
							<!-- <view class="selnum" catchtap="nothing" wx:if="{{item.quantity > 0 && item.is_on_sale == 1}}"> -->
							<view class="selnum" catchtap="nothing" wx:if="{{item.quantity > 0}}">
								<view data-item-id="{{item.id}}" class="cut" catchtap="cutNumber" disabled='{{item.quantity === 1}}'>-</view>
								<input value="{{item.quantity}}" class="number" disabled="true" type="number" />
								<view data-item-id="{{item.id}}" class="add" catchtap="addNumber">+</view>
							</view>
							<view wx:else class="out-stock">暂时缺货</view>
						</view>
					</view>
				</view>
			</view>
			<view class="delete-btn" data-item-id="{{item.id}}" catchtap="deleteGoods">
				删除
			</view>
		</view>
	</view>
	<view class="cart-empty-container {{cartGoods.length === 0?'show':''}}">
		<view class='cart-empty-view'>
			<image class='cart-empty' src='/images/icon/cart-empty.png'></image>
		</view>
		<view class='cart-empty-txt'>车里什么都没有，快去买一点吧</view>
		<view class="to-index-btn" bindtap="toIndexPage">
			去逛逛
		</view>
	</view>
	<view class="settle-box" wx:if="{{cartGoods.length > 0}}">
		<view class="left-price">
			<view class="all-selected" bindtap="checkedAll">
				<image class="checkbox" wx:if="{{checkedAllStatus}}" src="/images/icon/gou-red.png"></image>
				<image class="checkbox" wx:else src="/images/icon/gou-gray.png"></image>
				<view class="text">全选({{cartTotal.checkedGoodsCount}})
				</view>
			</view>
			<view class="total" hidden="">合计：¥{{cartTotal.checkedGoodsAmount}}</view>
		</view>
		<view class="to-pay-btn" hidden="" bindtap="checkoutOrder">去结算</view>
		<!-- <view class="to-pay-btn" hidden="" bindtap="test">去结算</view>    -->
	</view>
</view>